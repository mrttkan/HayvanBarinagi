@model HayvanBarinagi.Models.Hayvan

@{
    ViewData["Title"] = "Edit";
}

<style>
    .card-header {
        color: black;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        transition: background-color 0.2s, color 0.2s;
    }

        .card-header:hover {
            background-color: black;
            color: white;
        }

    .form-control, .control-label {
        color: black;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    }

        .form-control:hover {
            background-color: black;
            color: white;
        }

    .btn-primary, .btn-back {
        border-color: black;
        color: black;
        font-weight: bold;
        background-color: white; 
        transition: background-color 0.2s, color 0.2s;
    }

        .btn-primary:hover, .btn-back:hover {
            background-color: black;
            color: white;
        }
</style>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Seçilen Hayvanı Düzenle
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Tur" class="control-label"></label>
                            <input asp-for="Tur" class="form-control" />
                            <span asp-validation-for="Tur" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Ad" class="control-label"></label>
                            <input asp-for="Ad" class="form-control" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ResimUrl" class="control-label"></label>
                            <input asp-for="ResimUrl" class="form-control" />
                            <span asp-validation-for="ResimUrl" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Aciklama" class="control-label"></label>
                            <input asp-for="Aciklama" class="form-control" />
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>
                        <div style="height: 20px;"></div>
                        <div class="form-group">
                            <input type="submit" value="Kaydet" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-back">Geri Dön</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
