@model HayvanBarinagi.Models.SahiplendirmeBasvurulari

<!DOCTYPE html>
<html>
<head>
    <title>Sahiplendirme Başvurusu Düzenle</title>
</head>
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f7f8fa; /* Hafif gri bir genel arkaplan rengi */
    }

    .container {
        background-color: white; /* Beyaz bir kapsayıcı arkaplanı */
        padding: 30px; /* İçeriğin etrafına biraz boşluk ekleyin */
        border-radius: 15px; /* Hafif yuvarlak köşeler */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Hafif bir gölge efekti */
    }
</style>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Sahiplendirme Başvurusu Düzenle</h2>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label for="HayvanId" class="form-label">Hayvan ID:</label>
                <input asp-for="HayvanId" class="form-control" id="HayvanId" readonly />
            </div>

            <div class="mb-3">
                <label for="Ad" class="form-label">Ad:</label>
                <input asp-for="Ad" class="form-control" id="Ad" required>
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Soyad" class="form-label">Soyad:</label>
                <input asp-for="Soyad" class="form-control" id="Soyad" required>
                <span asp-validation-for="Soyad" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Telefon" class="form-label">Telefon Numarası:</label>
                <input asp-for="Telefon" class="form-control" id="Telefon" required>
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Eposta" class="form-label">E-posta:</label>
                <input asp-for="Eposta" class="form-control" id="Eposta" required>
                <span asp-validation-for="Eposta" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Adres" class="form-label">Adres:</label>
                <textarea asp-for="Adres" class="form-control" id="Adres" rows="4" required></textarea>
                <span asp-validation-for="Adres" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Aciklama" class="form-label">Bu hayvanı neden sahiplenmek istiyorsunuz ve onunla ilgili bakım planlarınız nelerdir?</label>
                <textarea asp-for="Aciklama" class="form-control" id="Aciklama" rows="6" required></textarea>
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Durum" class="form-label">Durum:</label>
                <select asp-for="Durum" class="form-control" id="Durum">
                    <option value="Bekliyor">Bekliyor</option>
                    <option value="Onaylandı">Onaylandı</option>
                    <!-- Diğer durumları buraya ekleyebilirsiniz -->
                </select>
                <span asp-validation-for="Durum" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Düzenlemeyi Kaydet</button>
        </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
