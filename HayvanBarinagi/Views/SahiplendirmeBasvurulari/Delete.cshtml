@model HayvanBarinagi.Models.SahiplendirmeBasvurulari

<!DOCTYPE html>
<html>
<head>
    <title>@_localization.Getkey("DeleteAdoptionApplication").Value</title>
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">@_localization.Getkey("DeleteAdoptionApplication").Value</h2>

        <div class="alert alert-danger">
            <strong>@_localization.Getkey("Warning").Value:</strong> "@Model.Ad @Model.Soyad" @_localization.Getkey("DeleteApplicationWarning").Value
        </div>

        <form asp-action="Delete" asp-controller="SahiplendirmeBasvurulari" method="post">
            <input asp-for="Id" type="hidden" />
            <button type="submit" class="btn btn-danger">@_localization.Getkey("ConfirmDelete").Value</button>
            <a asp-action="Index" class="btn btn-secondary">@_localization.Getkey("Cancel").Value</a>
        </form>
    </div>
</body>
</html>
