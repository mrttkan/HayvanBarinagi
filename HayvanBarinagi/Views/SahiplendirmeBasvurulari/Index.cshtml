@model List<HayvanBarinagi.Models.SahiplendirmeBasvurulari>

<!DOCTYPE html>
<html>
<head>
    <title>Sahiplendirme Başvuruları</title>
    <style>

        .box {
            background-color: white;
            background-color: rgba(255, 255, 255, 0.6);
            border-radius: 10px;
            padding: 20px;
        }

        h2 {
            color: black;
            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }

        table {
            transition: background-color 0.2s;
        }

        thead th {
            color: black;
            background-color: black;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        }

        tbody tr:hover {
            background-color: #f0f0f0;
        }

        .btn-primary {
            background-color: black;
            border-color: black;
        }

            .btn-primary:hover, .btn-primary:focus {
                background-color: white;
                border-color: white;
            }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover, .btn-danger:focus {
                background-color: #c82333;
                border-color: #c82333;
            }
    </style>
</head>
<body>
    <div class="box mt-5">
        <h2 class="mb-4">Sahiplendirme Başvuruları</h2>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>BaşvuruID</th>
                    <th>HayvanID</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Telefon</th>
                    <th>E-posta</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var basvuru in Model)
                {
                    <tr>
                        <td>@basvuru.Id</td>
                        <td>@basvuru.HayvanId</td>
                        <td>@basvuru.Ad</td>
                        <td>@basvuru.Soyad</td>
                        <td>@basvuru.Telefon</td>
                        <td>@basvuru.Eposta</td>
                        <td>@basvuru.Durum</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@basvuru.Id" class="btn btn-primary btn-sm">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@basvuru.Id" class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
