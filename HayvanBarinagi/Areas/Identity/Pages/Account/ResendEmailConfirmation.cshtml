@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "E-posta Onayını Yeniden Gönder";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f7f7f7;
    }

    .auth-container {
        max-width: 600px;
        margin: 5% auto;
        padding: 20px 40px;
        background-color: white;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
        border-radius: 10px;
    }

    h1 {
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        color: black;
    }

    h2 {
        color: #555;
    }

    p, a {
        font-size: 1.1rem;
        color: black;
    }

    a {
        color: #007BFF;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<div class="auth-container">
    <h1>@ViewData["Title"]</h1>
    <h2>E-posta adresinizi girin.</h2>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <br>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Yeniden Gönder</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
