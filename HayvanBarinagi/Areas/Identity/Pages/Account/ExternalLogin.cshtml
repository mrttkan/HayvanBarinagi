@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f7f7f7;
    }

    .external-login-container {
        max-width: 600px;
        margin: 10% auto;
        padding: 20px 40px;
        background-color: white;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
        border-radius: 10px;
    }

    h1, h2 {
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        color: black;
    }

    p.text-info {
        font-size: 16px;
    }

    button.btn-primary {
        border-color: black;
        color: black;
        font-weight: bold;
        transition: background-color 0.2s, color 0.2s;
    }

        button.btn-primary:hover {
            background-color: black;
            color: white;
        }
</style>

<div class="external-login-container">
    <h1>@ViewData["Title"]</h1>
    <h2 id="external-login-title">@Model.ProviderDisplayName hesabınızı iliştirin.</h2>
    <hr />

    <p id="external-login-description" class="text-info">
        <strong>@Model.ProviderDisplayName</strong> ile başarıyla kimlik doğruladınız.
        Aşağıda bu site için bir e-posta adresi girin ve girişi tamamlamak için Kayıt Ol düğmesine tıklayın.
    </p>

    <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="email" />
            <label asp-for="Input.Email" class="form-label"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="w-100 btn btn-lg btn-primary">Kayıt Ol</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
