@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Parola Sıfırlama Onayı";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f7f7f7;
    }

    .password-reset-confirmation-container {
        max-width: 600px;
        margin: 10% auto;
        padding: 20px 40px;
        background-color: white;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
        border-radius: 10px;
    }

    h1 {
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        color: black;
    }

    p {
        font-size: 1.1rem;
        color: black;
    }
</style>

<div class="password-reset-confirmation-container">
    <h1>@ViewData["Title"]</h1>
    <p>
        Lütfen parolanızı sıfırlamak için e-postanızı kontrol edin.
    </p>
</div>
